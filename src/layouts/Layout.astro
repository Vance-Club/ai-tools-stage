---
interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Aspora Design System - Component Demo" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <title>{title}</title>
    <style define:vars={{ base }}>
      /* Inter Regular (400) */
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url('/aspora-design-system/fonts/inter/inter-latin-400-normal.woff2') format('woff2');
      }

      /* Inter Medium (500) */
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 500;
        font-display: swap;
        src: url('/aspora-design-system/fonts/inter/inter-latin-500-normal.woff2') format('woff2');
      }

      /* Inter Semi Bold (600) */
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 600;
        font-display: swap;
        src: url('/aspora-design-system/fonts/inter/inter-latin-600-normal.woff2') format('woff2');
      }

      /* Inter Bold (700) */
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 700;
        font-display: swap;
        src: url('/aspora-design-system/fonts/inter/inter-latin-700-normal.woff2') format('woff2');
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background-color: #F8F8F8;
        color: #0E0F11;
        line-height: 1.5;
      }

      h1, h2, h3, h4, h5, h6 {
        font-weight: 600;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
